<div class='mt-4'>
    <h2>Add answer</h2>
    <a
        href='/me/stored/answers/{{question._id}}'
        class='btn btn-primary active'
        role='button'
        aria-pressed='true'
    >Back</a>
    <form method='post' action='/answers/store/{{question._id}}'>
        <div class='form-group'>

            <label for='content'>Answer</label>
            <input class='form-control' id='content' placeholder='Enter answer' name='content' /><br
            />
            <span> Is true ?</span>
            <div class='form-check'>
                <input
                    class='form-check-input'
                    type='checkbox'
                    value='true'
                    name='isTrue'
                    id='flexCheckChecked'
                />
                <label class='form-check-label' for='flexCheckChecked'>
                    Yes
                </label>
            </div>
        </div>

        <button type='submit' class='btn btn-primary'>Add answer</button>
    </form>
</div>