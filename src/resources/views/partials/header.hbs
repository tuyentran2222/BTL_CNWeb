<div class='container'>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
        <a class='navbar-brand' href='/'>English</a>
        <button
            class='navbar-toggler'
            type='button'
            data-toggle='collapse'
            data-target='#navbarSupportedContent'
            aria-controls='navbarSupportedContent'
            aria-expanded='false'
            aria-label='Toggle navigation'
        >
            <span class='navbar-toggler-icon'></span>
        </button>

        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
            {{#if login.status}}
                <ul class='navbar-nav ml-auto'>

                    <div class='dropdown show'>
                        <a
                            class='btn btn-secondary dropdown-toggle'
                            href='#'
                            role='button'
                            id='dropdownMenuLink'
                            data-toggle='dropdown'
                            aria-haspopup='true'
                            aria-expanded='false'
                        >
                            Quang Tùng
                        </a>

                        <div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>
                            {{#if login.admin}}
                                <a class='dropdown-item' href='/courses/create'>Đăng khóa học</a>
                                <a class='dropdown-item' href='/me/stored/courses'>Khóa học của tôi</a>
                            {{/if}}
                            <form method='post' action='/login?_method=DELETE'>
                                <button type='submit' class='btn btn-primary dropdown-item'>Đăng
                                    xuất</button>
                            </form>
                        </div>
                    </div>
                </ul>
            {{else}}
                <ul class='navbar-nav ml-auto'>
                    <a class='btn btn-secondary' href='/login' role='button'>Đăng nhập</a>

                    <a class='btn btn-secondary' href='/users/signup' role='button'>Đăng kí</a>
                </ul>
            {{/if}}
        </div>
    </nav>

</div>