<div class='container'>
    <div class='add-course'>
        <div class='left-sidebar col-2'>
            <ul>
                <li><a href='/courses/create'>Post Courses</a></li>
                <li><a href='/me/stored/courses'>All Courses</a></li>
                <li class='sidebar-active'><a href='/me/stored/grammars'>Grammar</a></li>
            </ul>
        </div>
        <div class='main-content col-10'>
            <div class=''>
                <div class='mt-4'>
                    <div class='mt-4'>
                        <h2>Grammar Lessons</h2>
                        <table class='table styled-table'>
                            <thead>
                                <tr>
                                    <th scope='col'>ID</th>
                                    <th scope='col'>Title</th>
                                    <th scope='col'>Description</th>
                                    <th scope='col'>Created At</th>
                                    <th scope='col'>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each items}}
                                    <tr>
                                        <th scope='row'>{{sum @index 1}}</th>
                                        <td>{{this.title}}</td>
                                        <td>{{this.description}}</td>
                                        <td>{{this.createdAt}}</td>
                                        <td>
                                            <a
                                                href='/grammar/{{this._id}}/edit'
                                                class='btn btn-secondary btn-lg active'
                                                aria-pressed='true'
                                            ><i
                                                    class='bx bx-edit'
                                                    style='margin-left:10px; color:#0C90D6;'
                                                ></i></a>
                                            <a
                                                href='#'
                                                class='btn btn-secondary btn-lg active'
                                                aria-pressed='true'
                                                data-toggle='modal'
                                                data-target='#exampleModal'
                                                data-id='{{this._id}}'
                                            ><i
                                                    class='bx bx-x-circle'
                                                    style='margin-left:10px; color: red;'
                                                ></i></a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <a class='btn btn-primary' href='/grammar/create'>Add Grammar Lesson</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{! <div class='modal' id='exampleModal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Xóa khóa học?</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Bạn có muốn xóa khóa học này?</p>
            </div>
            <div class='modal-footer'>
                <button id='btn-delete-lesson' type='button' class='btn btn-danger'>Xóa bỏ</button>
                <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy</button>
            </div>
        </div>
    </div>

<form method='post' name='delete-form'></form>
