<div class='container'>
    <div class='add-course'>
        <div class='left-sidebar col-2'>
            <ul>
                <li><a href='/courses/create'>Post Course</a></li>
                <li class='sidebar-active'><a href='/me/stored/courses'>My Course</a></li>
                <li><a href='/me/stored/grammars'>Grammar</a></li>
            </ul>
        </div>
        <div class='main-content col-10'>
            <div class=''>
                <div class='mt-4'>
                    <div class='mt-4'>
                        <h2>Answer Lists</h2>
                        <table class='table styled-table'>
                            <thead>
                                <tr>
                                    <th scope='col'>ID</th>
                                    <th scope='col'>answer</th>
                                    <th scope='col'>Created At</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each items}}
                                    <tr>
                                        <th scope='row'>{{sum @index 1}}</th>
                                        <td>{{this.content}}</td>
                                        <td>{{this.createdAt}}</td>
                                        <td>
                                            <a
                                                href='/answers/{{this._id}}/edit'
                                                class='btn btn-secondary btn-lg active'
                                                aria-pressed='true'
                                            ><i
                                                    class='bx bx-edit'
                                                    style='margin-left:10px; color:#0C90D6;'
                                                ></i></a>
                                               
                                                <form method='post' name='delete-form' action='/answers/{{this._id}}?_method=DELETE'>
                                                 <button type='submit' class='btn btn-secondary btn-lg active' ><i class='bx bx-x-circle' style="margin-left:10px; color: red;"  ></i></button>
                                                 </form>
                                                </td>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <a
                            href='/answers/create/{{question_id}}'
                            class='btn btn-primary'
                            style='width: 150px;display: block;display:flex;align-items: center;'
                        >Add answer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{! 
    <div class='modal' id='exampleModal' tabindex='-1' role='dialog'>
        <div class='modal-dialog' role='document'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <h5 class='modal-title'>Xóa khóa học?</h5>
                    <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                        <span aria-hidden='true'>&times;</span>
                    </button>
                </div>
                <div class='modal-body'>
                    <p>Bạn có muốn xóa khóa học này?</p>
                </div>
                <div class='modal-footer'>
                    <button id='btn-delete-answer' type='button' class='btn btn-danger'>Xóa bỏ</button>
                    <button
                        type='button'
                        class='btn btn-secondary'
                        data-dismiss='modal'
                    >Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>

<form method='post' name='delete-form'></form>
