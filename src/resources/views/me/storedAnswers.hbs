    document.addEventListener('DOMContentLoaded',function(){ var answerId; var deleteForm =
    document.forms['delete-form']; $('#exampleModal').on('show.bs.modal', function (event) { var
    button = $(event.relatedTarget) ; answerId = button.data('id') ;}) ; var btn=
    document.getElementById('btn-delete-answer'); console.log(btn); btn.onclick= function(){
    deleteForm.action = '/answers/'+ answerId +'?_method=DELETE'; deleteForm.submit(); } });

</script> }}